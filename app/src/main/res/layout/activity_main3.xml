<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/design1"
        android:backgroundTint="#F6A707"
        android:ems="10"
        android:textColorHint="@color/purple_500"
        app:boxBackgroundMode="outline"
        app:counterEnabled="true"
        app:counterMaxLength="80"
        app:counterTextColor="@color/black"
        app:endIconDrawable="@drawable/ic_baseline_delete_24"
        app:endIconMode="clear_text"
        app:endIconTint="@color/purple_500"
        app:helperText="TextInputLayout"
        app:helperTextTextColor="@color/black"
        android:hint="Enter text"
        app:hintTextColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_mode_comment_24"
        app:startIconTint="@color/purple_500">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:inputType="text"
            android:maxLength="80"
            android:textColorHint="@color/purple_500"
            android:textCursorDrawable="@drawable/design5"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            app:hintTextColor="@color/purple_500" />


    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>